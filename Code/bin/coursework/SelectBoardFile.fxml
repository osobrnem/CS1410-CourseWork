<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox />
      <HBox alignment="CENTER">
         <children>
            <Label text="Board File: ">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="FileInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#submitButton" text="Submit">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <MenuButton fx:id="boardMenu" mnemonicParsing="false" text="Local boards">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#menuBig" text="Big" />
                <MenuItem mnemonicParsing="false" onAction="#menuMassive" text="Massive" />
                  <MenuItem mnemonicParsing="false" onAction="#menuSmall" text="Small" />
                  <MenuItem mnemonicParsing="false" onAction="#menuImpossible" text="Impossible" />
              </items>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </MenuButton>
            <Label text="Number of players (Max 4): ">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="NumberInput" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="50.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
   </children>
</VBox>
